{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "More Than Just Hot or Cold",
    "subtitle": "Hover over the cities to see their average temperatures for the year",
    "anchor": "start"
  },
  "width": 500,
  "height": 400,
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "data": {
        "url": "australia_map.json",
        "format": {
          "type": "json",
          "property": "features"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#eee",
        "stroke": "#fff"
      }
    },
    {
      "data": {
        "url": "weather_data_merged.csv"
      },
      "transform": [
        {
          "aggregate": [
            {
              "op": "mean",
              "field": "Maxtemp",
              "as": "avg_max_temp"
            },
            {
              "op": "mean",
              "field": "Mintemp",
              "as": "avg_min_temp"
            }
          ],
          "groupby": [
            "City"
          ]
        },
        {
          "lookup": "City",
          "from": {
            "data": {
              "values": [
                {
                  "City": "Melbourne",
                  "latitude": -37.8136,
                  "longitude": 144.9631
                },
                {
                  "City": "Sydney",
                  "latitude": -33.8688,
                  "longitude": 151.2093
                },
                {
                  "City": "Brisbane",
                  "latitude": -27.4698,
                  "longitude": 153.0251
                }
              ]
            },
            "key": "City",
            "fields": [
              "latitude",
              "longitude"
            ]
          }
        }
      ],
      "mark": {
        "type": "circle",
        "size": 100
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "color": {
          "field": "City",
          "type": "nominal",
          "legend": null
        },
        "tooltip": [
          {
            "field": "City",
            "type": "nominal"
          },
          {
            "field": "avg_max_temp",
            "type": "quantitative",
            "format": ".1f",
            "title": "Avg. Max Temp (°C)"
          },
          {
            "field": "avg_min_temp",
            "type": "quantitative",
            "format": ".1f",
            "title": "Avg. Min Temp (°C)"
          }
        ]
      }
    }
  ]
}