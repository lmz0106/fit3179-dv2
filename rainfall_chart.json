{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Grouped bar chart comparing total rainfall and number of rainy days.",
  "data": { "url": "weather_data_merged.csv" },
  "transform": [
    {
      "calculate": "datum.Rainfall > 1 ? 1 : 0",
      "as": "is_rainy_day"
    },
    {
      "aggregate": [
        { "op": "sum", "field": "Rainfall", "as": "Total Rainfall (mm)" },
        { "op": "sum", "field": "is_rainy_day", "as": "Number of Rainy Days" }
      ],
      "groupby": ["City"]
    },
    {
      "fold": ["Total Rainfall (mm)", "Number of Rainy Days"],
      "as": ["Metric", "Value"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": { "field": "City", "type": "nominal", "axis": { "title": null, "labelAngle": 0 } },
    "y": { "field": "Value", "type": "quantitative", "axis": { "title": null } },
    "xOffset": { "field": "Metric", "type": "nominal" },
    "color": {
      "field": "Metric",
      "type": "nominal",
      "legend": { "title": "Measurement" },
      "scale": { "range": ["#4c78a8", "#f58518"] }
    },
    "tooltip": [
      { "field": "City", "type": "nominal" },
      { "field": "Metric", "type": "nominal" },
      { "field": "Value", "type": "quantitative", "format": ".1f" }
    ]
  }
}